{
  // 解析选项
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env": {
    "node": true, // 启动node全局变量
    "browser": true // 启用web api 全局变量
  },

  "extends": ["eslint:recommended"],

  // 具体检测规则
  "rules": {
    "default-case": "warn",
    "eqeqeq": "error",
    "no-console": "off",
    "no-var": "error"
  }
}
